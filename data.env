# .env file example for a website project

# General Website Configuration
APP_NAME=MyWebsite
APP_ENV=production
APP_DEBUG=false
APP_URL=https://www.mywebsite.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mywebsite_db
DB_USERNAME=root
DB_PASSWORD=your_db_password_here

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username_here
MAIL_PASSWORD=your_mail_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@mywebsite.com
MAIL_FROM_NAME="${APP_NAME}"

# Third-Party API Keys
GOOGLE_API_KEY=your_google_api_key_here
FACEBOOK_API_KEY=your_facebook_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here

# Session and Cache Configuration
SESSION_DRIVER=cookie
CACHE_DRIVER=file

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=mywebsite-bucket
